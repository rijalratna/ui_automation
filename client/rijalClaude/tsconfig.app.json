{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.html",
    "src/**/*.css",
    "src/**/*.scss"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.server.ts",   // Ensure server files are excluded
    "**/*.ngtypecheck.ts" // Exclude any ngtypecheck files as well
  ]
}
